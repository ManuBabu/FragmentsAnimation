<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.user.shopunterui.Frag_SignUp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <RelativeLayout
            tools:context="com.example.user.shopunterui.Signup"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/relativeLayout4">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Shop Name"
                android:hint="Name"
                android:ems="10"
                android:id="@+id/et_shopname"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/et_signup_email"
                android:hint="Email"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_shopname" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/et_signupmobile"
                android:hint="Mobile"
                android:layout_below="@+id/et_signup_email"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/et_signup_pass"
                android:hint="Password"
                android:layout_below="@+id/et_signupmobile"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:id="@+id/relativeLayout3"
                android:background="@null"
                android:layout_below="@+id/et_signup_repass"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btn_signup_cancle"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="#039be5"
                    android:textColor="#FAFAFA"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:id="@+id/btn_signup_sign"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#039be5"
                    android:textColor="#FAFAFA"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="25dp" />
            </RelativeLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Re-Password"
                android:id="@+id/et_signup_repass"
                android:layout_below="@+id/et_signup_pass"
                android:layout_alignStart="@+id/et_signup_pass" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
